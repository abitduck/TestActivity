<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_parent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/av_title_color_green"
    android:orientation="vertical" >


    <RelativeLayout
        android:id="@+id/titlebar_bg_container"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/title_bar_back"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/av_widget_selector_title_bar_settings_v2"
            android:gravity="center"
            android:src="@drawable/av_back_arrow" />

        <LinearLayout
            android:id="@+id/common_ll_middle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/title_bar_menu_btn"
            android:layout_toRightOf="@+id/title_bar_back"
            android:gravity="center" >

            <TextView
                android:id="@+id/title_bar_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textAppearance="@style/av_TextAppearance.Title.White" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_bar_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_titlebar_setting_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/common_title_bar_setting_btn"
            android:gravity="center"
            android:minWidth="@dimen/common_titlebar_setting_min_width"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/title_bar_menu_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/av_widget_selector_title_bar_settings_v2"
            android:src="@drawable/av_title_menu" />

        <ImageView
            android:id="@+id/title_red_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/av_update_tip"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>